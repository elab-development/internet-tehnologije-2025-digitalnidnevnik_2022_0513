generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// enumi
enum Role {
  ADMIN
  TEACHER
  STUDENT
}

// modeli/entiteti
model Classroom {
  id    Int    @id @default(autoincrement())
  name  String @unique

  students User[] @relation("StudentClassroom")

  homeroomTeacherId Int?
  homeroomTeacher   User? @relation("HomeroomTeacher", fields: [homeroomTeacherId], references: [id])

  teachingAssignments TeacherSubjectClassroom[]

  grades      Grade[]
  assignments Assignment[]

  @@unique([homeroomTeacherId])
  @@map("classrooms")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  full_name   String?
  password    String
  role        Role

  classroomId Int?
  classroom   Classroom? @relation("StudentClassroom", fields: [classroomId], references: [id])

  teachingAssignments TeacherSubjectClassroom[]
  homeroomOf          Classroom[] @relation("HomeroomTeacher")

  gradesReceived Grade[]      @relation("StudentGrades")
  gradesGiven    Grade[]      @relation("TeacherGrades")
  assignments    Assignment[] @relation("TeacherAssignments")

  @@map("users")
}

model Subject {
  id    Int    @id @default(autoincrement())
  name  String @unique

  teachingAssignments TeacherSubjectClassroom[]

  grades      Grade[]
  assignments Assignment[]

  @@map("subjects")
}

model TeacherSubjectClassroom {
  id          Int @id @default(autoincrement())

  teacherId   Int
  subjectId   Int
  classroomId Int

  teacher   User      @relation(fields: [teacherId], references: [id])
  subject   Subject   @relation(fields: [subjectId], references: [id])
  classroom Classroom @relation(fields: [classroomId], references: [id])

  @@map("teacher_subject_classroom")
}

model Grade {
  id          Int      @id @default(autoincrement())
  value       Int
  comment     String?
  date        DateTime @default(now())

  studentId   Int
  teacherId   Int
  subjectId   Int
  classroomId Int

  student   User      @relation("StudentGrades", fields: [studentId], references: [id])
  teacher   User      @relation("TeacherGrades", fields: [teacherId], references: [id])
  subject   Subject   @relation(fields: [subjectId], references: [id])
  classroom Classroom @relation(fields: [classroomId], references: [id])

  @@map("grades")
}

model Assignment {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime

  teacherId   Int
  subjectId   Int
  classroomId Int

  teacher   User      @relation("TeacherAssignments", fields: [teacherId], references: [id])
  subject   Subject   @relation(fields: [subjectId], references: [id])
  classroom Classroom @relation(fields: [classroomId], references: [id])

  @@map("assignments")
}
